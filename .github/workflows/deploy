name: Deploy

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm install

      - name: Build project
        env:
          API_KEY: ${{ secrets.API_KEY }}
        run: |
          echo "API_KEY=${{ secrets.API_KEY }}" > .env
          npm run build

      - name: Deploy
        run: npm run deploy
